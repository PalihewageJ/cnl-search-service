{
  "name": "rapid-example-service",
  "version": "0.0.1",
  "description": "Microservice template for project RAPID ",
  "author": "RAPID team",
  "private": true,
  "license": "copyright to Fortude",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "STAGE=dev CONFIG_BASE_URL='http://localhost:3000/config' nest start --watch",
    "start:debug": "STAGE=dev nest start --debug --watch",
    "start:qa": "STAGE=qa node dist/main",
    "start:uat": "STAGE=uat node dist/main",
    "start:prod": "STAGE=prod node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "STAGE=dev jest",
    "test:watch": "STAGE=dev jest --watch",
    "test:cov": "STAGE=dev jest --coverage",
    "test:debug": "STAGE=dev node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "STAGE=dev jest --config ./test/jest-e2e.json",
    "faas-build": "faas-cli build -f ./stack.yml",
    "faas-push": "faas-cli push -f ./stack.yml",
    "faas-deploy": "faas-cli deploy --tls-no-verify -f ./stack.yml"
  },
  "dependencies": {
    "@apollo/federation": "^0.27.0",
    "@nestjs/axios": "^0.0.1",
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^1.0.1",
    "@nestjs/core": "^8.0.0",
    "@nestjs/graphql": "^8.0.2",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/typeorm": "^8.0.1",
    "apollo-server-express": "^2.25.2",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "graphql": "^15.5.1",
    "graphql-tools": "^7.0.5",
    "joy": "^0.1.1",
    "lodash": "^4.17.21",
    "mssql": "^7.1.3",
    "nestjs-pino": "^1.4.0",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "typeorm": "^0.2.34",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/hapi__joi": "^17.1.7",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.171",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "eslint": "^7.31.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "27.0.6",
    "pino-pretty": "^5.1.2",
    "prettier": "^2.3.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
